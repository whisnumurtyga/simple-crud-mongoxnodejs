<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Voucher List</h2>
      <a href="/vouchers/add" class="btn btn-primary mb-3">Add Voucher</a>

      <!-- flash message -->
      <% if (msg.length != 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Remaining Duration</th>
            <th scope="col">Voucher</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (vouchers.length === 0) { %>
          <tr>
            <td colspan="6">
              <div class="alert alert-danger fw-bold" role="alert">Voucher not found!</div>
            </td>
          </tr>
          <% } %> <% vouchers.forEach((voucher,i) => { %>
          <tr>
            <th scope="row"><%= ++i %></th>
            <td><%= voucher.username %></td>
            <td><%= getRemainingDuration(voucher.expired) %></td>
            <td><%= voucher.voucherCode %></td>
            <td>
              <a href="/vouchers/<%= voucher.voucherCode %>" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
