<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Edit Voucher</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="POST" action="/vouchers?_method=PUT">
        <input type="hidden" name="_id" value="<%= voucher._id %>" />
        <div class="mb-3">
          <h1 class="badge bg-primary text-wrap"><%= voucher.voucherCode %></h1>
          <p class="card-text">Duration Left: <br> <%= getRemainingDuration(voucher.expired) %></p>
          <label for="duration" class="form-label">Add Duration (Day)</label>
          <input type="text" class="form-control" id="duration" name="duration" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Duration</button>
      </form>
    </div>
  </div>
</div>
